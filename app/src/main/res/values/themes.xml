<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TCardly" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.TCardly.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FAF9F7</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.TCardly</item>
    </style>
</resources>
